                    </Grid.DataContext>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*" />
                        <ColumnDefinition Width="24*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
