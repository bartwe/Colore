                            <Label Content="Colors" HorizontalAlignment="Center" FontSize="16px" />
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Color One" />
                                <xckt:ColorPicker Margin="3,0,0,0" ShowDropDownButton="False"
